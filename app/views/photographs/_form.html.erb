
<%= if @photograph.image.url == "/images/original/missing.png" then "" else image_tag @photograph.image.url(:medium) end %><br/><br/>

<%= form_for @photograph, html: { multipart: true } do |f| %>
  <% if @photograph.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photograph.errors.count, "error") %> prohibited this photograph from being saved:</h2>

      <ul>
      <% @photograph.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
    

  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.select :category, options_for_select([
    ['NewBorn'], 
    ['Child'],
    ['Family'],
    ['High School Seniors'],
    ['Engagement'],
    ['Wedding'],
    ['Maternity'],
    ['Bar & Bat Mitzvah'],
    ['Food'],
    ['Headshots'],
    ['Pets'],
    ['Sports'],
    ['Birthday'],
    ['Real Estate'],
    ['Boudoir'],
    ['Landscape'],
    ['Commercial & Product'],
    ['Fashion'],
    ['Art']]) %>
    
    <%= f.hidden_field :photographer_id, value: current_photographer.id %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: 'btn btn-primary' %>
  </div>
<% end %>
